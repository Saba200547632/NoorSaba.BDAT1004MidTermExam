    "# Question 23\n",
    "\n",
    "def f(i, num):\n",
    "    if(num > 0):\n",
    "        f(i, num//2);               #print previous pattern\n",
    "        print(\" \"*i + \"*\"*num);     \n",
    "        f(i + 1, num//2); \n",
    "f(0, 0)"
